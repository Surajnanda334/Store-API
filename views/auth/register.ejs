<section class="login flex justify-center pt-24"> 
  <div class="flex h-1/2  items-center justify-center bg-gray-50 px-4 mt-8 w-2/3">
    <div class="py-4">
      <div>
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
          Sign up to your account
        </h2>
      </div>
      <form class="mt-8 space-y-6" action="/user/signup" method="POST">
        <div class="rounded-md shadow-sm -space-y-px">
          <div class="mb-2">
            <label for="name" class="sr-only">Name</label>
            <input id="name" name="name" type="text" autocomplete="name" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Name">
          </div>
          <div>
            <label for="email" class="sr-only">Email address</label>
            <input id="email" name="email" type="text" autocomplete="email" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Email address">
          </div>
          <div>
            <label for="password" class="sr-only">Password</label>
            <input id="password" name="password" type="password" autocomplete="current-password" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Password">
          </div>
        </div>
        <div class="form-group">
          <label for="role" class="text-light">Role</label>
          <div class="inline-block ml-4">
            <div class="inline">
              <input type="radio" id="radio-2" name="role" value="admin" >
              <label for="radio-2">admin</label>
          </div>
          <div class="inline">
              <input type="radio" id="radio-3" name="role" value="user" >
              <label for="radio-3" class="radio-label">user</label>
          </div>
          </div>
       </div>
        <div>
          <button
            class="btn-primary rounded-full text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
            type="submit">
            Sign up
          </button>
          <a class="inline-block align-baseline font-bold text-sm" href="/user/login">
              Already have account?
          </a> 
        </div>
      </form>
    </div>
  </div>
</section>